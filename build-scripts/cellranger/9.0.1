#########################################################
# Cell Ranger build script
# - NOTE: Cell Ranger link only works for one day.
# - Please update the link at line 13. Or you can enter it manually when prompted.
#########################################################

install_app() {
    # By default, $target_dir and $tmp_dir are created and we are now in $tmp_dir
    url='https://cf.10xgenomics.com/releases/cell-exp/cellranger-9.0.1.tar.gz'
    # if the url do not contain the 'Expires' parameter, read -r url
    if [[ "$url" != *"Expires="* ]]; then
        print_stderr "âš ï¸ 10X links only valid for one day. Please go to the link below and get tar.gz link"
        printf "https://www.10xgenomics.com/support/software/cell-ranger/downloads/previous-versions \n" 1>&2
        print_stderr "And enter the download link: "
        read -r url
    fi
    # if cellranger-$version.tar.gz not in the url, print error message and exit
    if [[ "$url" != *"cellranger-$version.tar.gz"* ]]; then
        print_stderr "âŒ The download link is invalid or not for version $version."
        return 1
    fi
    print_stderr "Downloading ${YELLOW}${app_name_version}${NC}"
    wget -nv -O "${app_name}_${version}.tar.gz" "$url"

    print_stderr "Extracting ${YELLOW}${app_name_version}${NC}"
    tar_xf_pigz "${app_name}_${version}.tar.gz" -C "$target_dir" --strip-components=1
}

# Available variables:
# - NCPUS: number of cores to use (default: 4; set by condatainer)
# - app_name:         name     of the app (set by condatainer)
# - version:          version  of the app (set by condatainer)
# - app_name_version: name/version        (set by condatainer)

# - target_dir:       opt/name/version (set by condatainer)
# - tmp_dir:          tmp directory (set by condatainer)

# region common_functions
set -e # exit on error
RED='\033[0;91m'    # Red      WARNING or ERROR
BLUE='\033[0;94m'   # Blue     Dependency or Modulefile Changes
YELLOW='\033[0;93m' # Yellow   App Name and/or Version
NC='\033[0m'        # No Color
NCPUS=${NCPUS:-4}   # number of cores to use when building from source

install() {
    print_stderr "Installing the target module: ${YELLOW}${app_name_version}${NC}"
    print_stderr "ðŸŽ¯ Target directory: $target_dir"
    # if target directory exists, exit 1
    if [ -d "$target_dir" ]; then
        print_stderr "${RED}ERROR${NC}: Target app dir exists!"
        print_stderr "Exit Installing"
        exit 1
    fi

    if [[ -z "$tmp_dir" ]]; then
        print_stderr "${RED}ERROR${NC}: tmp_dir is not set!"
        print_stderr "Exit Installing"
        exit 1
    fi

    if [[ -z "$target_dir" ]]; then
        print_stderr "${RED}ERROR${NC}: target_dir is not set!"
        print_stderr "Exit Installing"
        exit 1
    fi

    mkdir -p "$target_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir"
    install_app
    print_stderr "âœ… Installation completed. ${YELLOW}${app_name_version}${NC} is ready to use."
}

print_stderr() {
    printf "[`date +"%Y-%m-%d %T"`] $1\n" 1>&2
}

pigz_or_gunzip() {
    if command -v pigz &> /dev/null; then
        pigz -d -p $NCPUS "$1"
    else
        gunzip "$1"
    fi
}

pigz_or_gunzip_pipe() {
    if command -v pigz &> /dev/null; then
        pigz -d -p $NCPUS -c "$1"
    else
        gunzip -c "$1"
    fi
}

tar_xf_pigz() {
    if command -v pigz &> /dev/null; then
        tar --no-same-owner --use-compress-program="pigz -d -p $NCPUS" -xf "$@"
    else
        tar --no-same-owner -xzf "$@"
    fi
}
#endregion

install

