#!/bin/bash
# This script helps run code-server with CondaTainer env.

PORT=
AUTH="none"

OVERLAYS_ARG=""
OVERLAYS=""
OVERLAY="env.img"
FAKEROOT_ARG=""
BASE_IMAGE_ARG=""
CWD=$(readlink -f .)

CONDATAINER_CONFIG_DIR="$HOME/.config/condatainer"
mkdir -p $CONDATAINER_CONFIG_DIR

RED='\033[0;31m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

print_help() {
    echo "Usage: $0 [options]"
    echo ""
    echo "Options:"
    echo "  -p <port>       Port for code-server (if not provided, an available port will be chosen). Valid range: 1024-65535."
    echo "  -a <auth>       Password for code-server authentication (default: none)"
    echo "  -b <image>      Base image file"
    echo "  -e <overlay>    Environment overlay image file (default: $OVERLAY)"
    echo "  -o <overlay>    Additional overlay files (can have multiple -o options)"
    echo "  -f              Use fakeroot mode (will be root inside the container)"
    echo "  -y              Accept all warnings and proceed"
    echo "  -h              Show this help message"
}

while getopts "p:a:b:e:o:fyh" opt; do
    case ${opt} in
        p ) PORT=$OPTARG ;;
        a ) AUTH=$OPTARG ;;
        b ) BASE_IMAGE_ARG="-b $OPTARG" ;;
        e ) OVERLAY=$OPTARG ;;
        o ) OVERLAYS_ARG+=" -o $OPTARG"; OVERLAYS+=" $OPTARG" ;;
        f ) FAKEROOT_ARG="--fakeroot"; echo "Using fake root mode" ;;
        y ) AUTO_YES=true ;;
        h ) print_help; exit 0 ;;
        \? ) print_help; exit 1 ;;
    esac
done

# Function: choose a random free port in range 20000-65000
choose_port() {
    local try=0
    while [ $try -lt 50 ]; do
        candidate=$(shuf -i 20000-65000 -n 1)
        if ! lsof -i :$candidate &> /dev/null; then
            echo $candidate
            return 0
        fi
        try=$((try+1))
    done
    return 1
}

PORT_AUTO=0
# If no port specified, pick an available one
if [ -z "$PORT" ]; then
    PORT=$(choose_port) || {
        echo -e "${RED}[ERROR]${NC} Failed to find an available port. Please specify one with -p.";
        exit 1
    }
    PORT_AUTO=1
else
    if ! printf '%s' "$PORT" | grep -qE '^[0-9]+$'; then
        echo -e "${RED}[ERROR]${NC} Port must be a number."
        exit 1
    fi
    if [ "$PORT" -lt 1024 ] || [ "$PORT" -gt 65535 ]; then
        echo -e "${RED}[ERROR]${NC} Port $PORT is out of allowed range (1024-65535)."
        exit 1
    fi
fi

# If the port was auto-chosen, ask the user to confirm before proceeding
if [ "$PORT_AUTO" -eq 1 ]; then
    echo -e "Available port :${BLUE}$PORT${NC} auto-selected."
    echo -e "Remember to set up port forwarding: ${CYAN}ssh -L $PORT:localhost:$PORT user@login-node${NC}"
    if [ -z "$AUTO_YES" ]; then
        read -p "Proceed with this port? [Y/n] " resp
        case "$resp" in
            ""|[Yy]*) ;;
            *) echo "Aborted by user."; exit 1 ;;
        esac
    else
        echo "Auto-confirm enabled; proceeding with port $PORT."
    fi
fi

#region Sanity Checks
if lsof -i :$PORT &> /dev/null; then
    echo -e "${RED}[ERROR]${NC} Port ${BLUE}$PORT${NC} is already in use."
    echo -e "Please choose a different port using the ${YELLOW}-p${NC} option."
    exit 1
fi

if ! command -v condatainer &> /dev/null; then
    echo -e "${RED}[ERROR]${NC} CondaTainer is not installed or not in PATH."
    echo -e "Please go to https://github.com/Justype/condatainer to install CondaTainer."
    exit 1
fi

missing=""
for pkg in code-server $OVERLAYS; do
    if ! condatainer ls $pkg | grep -q $pkg; then
        missing+=" $pkg"
    fi
done
if [ -n "$missing" ]; then
    echo -e "${RED}[ERROR]${NC} The following required overlays are missing:${missing}."
    echo -e "Please run 'condatainer install$missing'"
    if [ -z "$AUTO_YES" ]; then
        read -p "Do you want to install them now? [Y/n] " answer
    else
        answer="Y"
    fi
    if [[ "$answer" == "Y" || "$answer" == "y" || "$answer" == "" ]]; then
        condatainer install $missing
        if [ $? -ne 0 ]; then
            echo -e "${RED}[ERROR]${NC} Failed to install required overlays."
            exit 1
        fi
    else
        exit 1
    fi
fi

if [ ! -f "$OVERLAY" ]; then
    echo -e "${YELLOW}[WARNING]${NC} Overlay ${BLUE}$OVERLAY${NC} not found."
    OVERLAY_ARG=""
    if [ "$AUTO_YES" != true ]; then
        read -p "Do you want to proceed without an overlay? [y/N]: " choice
        case "$choice" in
            y|Y ) ;;
            * ) exit 0 ;;
        esac
    fi
else
    PID_LIST=$(lsof $OVERLAY 2>/dev/null | awk 'NR>1 {print $2}' | sort -u)
    if [ -n "$PID_LIST" ]; then
        echo -e "${YELLOW}[WARNING]${NC} Overlay ${BLUE}$OVERLAY${NC} is currently in use by the following processes:"
        echo "$PID_LIST"
        if [ "$AUTO_YES" = true ]; then
            response="y"
        else
            read -p "Do you want to kill these processes and continue? [y/N] " response
        fi

        if [[ ! "$response" =~ ^[Yy]$ ]]; then
            echo -e "Aborting as per user request."
            exit 1
        else
            for pid in $PID_LIST; do
                kill -9 $pid
            done
            echo -e "${BLUE}[INFO]${NC} Killed processes using the overlay."
        fi
    fi
    echo -e "Using overlay: ${BLUE}$OVERLAY${NC}"
    OVERLAY_ARG="-o $OVERLAY"
    ABS_OVERLAY_PATH=$(readlink -f $OVERLAY)
    CWD=$(dirname $ABS_OVERLAY_PATH) # Set CWD to overlay directory
    # Check and repair overlay image
    echo -e "Checking overlay image integrity..."
    e2fsck -p $OVERLAY > /dev/null 2>&1
    e2fsck -p $OVERLAY > /dev/null 2>&1
    if [ $? -ne 0 ]; then
        echo -e "${RED}[ERROR]${NC} Overlay ${BLUE}$OVERLAY${NC} is corrupted and could not be auto repaired."
        echo -e "Please run ${YELLOW}e2fsck $OVERLAY${NC} manually to attempt repair."
        exit 1
    fi
fi
#endregion

echo -e "code-server at ${BLUE}http://localhost:${PORT}?folder=${CWD}${NC}"

condatainer exec \
    $BASE_IMAGE_ARG \
    -o code-server \
    $OVERLAYS_ARG \
    $OVERLAY_ARG --writable-img \
    $FAKEROOT_ARG \
    code-server \
        --disable-update-check \
        --bind-addr 127.0.0.1:$PORT \
        $AUTH_OPTION
