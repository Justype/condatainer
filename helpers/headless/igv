#!/bin/bash
# This script helps run an XFCE desktop (VNC / noVNC) on current machine.

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]:-$0}")" && pwd)"
source "$SCRIPT_DIR/.common.sh"
HELPER_NAME=igv

# Save defaults on first run
config_init $HELPER_NAME \
    NCPUS=3 \
    MEM=12G \
    TIME=12:00:00 \
    GPU= \
    BASE_IMAGE= \
    BASE_IMAGE_DISTRO=noble \
    PORT= \
    VNC_PASSWD= \
    DESKTOP_HOME="$SCRATCH/desktop-home" \
    REUSE_MODE=ask \
    OVERLAY=env.img

# Load saved defaults
config_load $HELPER_NAME
config_require $HELPER_NAME OVERLAY DESKTOP_HOME
# Track whether a password was set in config
if [ -z "${VNC_PASSWD:-}" ]; then AUTH_CONFIG_SET=false; else AUTH_CONFIG_SET=true; fi

print_help() {
    echo "Usage: $0 [options]"
    echo ""
    echo "Options:"
    echo "  -p <port>       Port for noVNC (default: ${PORT:-randomly picked}). Valid range: 1024-65535"
    echo "  -a <passwd>     VNC password (if empty, one is generated)"
    echo ""
    echo "  -b <image>      Base image file"
    echo "  -e <.img>       Writable overlay (default: $OVERLAY)"
    echo "  -o <overlay>    Additional overlay files (can have multiple -o options)"
    echo ""
    echo "  config          Show config file path and contents"
    echo ""
    echo "State  file: $(state_path $HELPER_NAME)"
    echo "Config file: $(config_path $HELPER_NAME)"
}

case $1 in
    config)         config_show $HELPER_NAME ;;
    --help|-h|help) print_help; exit 0 ;;
    *)              ;;
esac

# Track if -o flag is used to clear overlays on first use
_OVERLAYS_CLEARED=false
# track whether -a supplied a password
AUTH_FLAG_SET=false

while getopts "p:a:b:e:o:" opt; do
    case ${opt} in
        p ) PORT=$OPTARG ;;
        a ) VNC_PASSWD=$OPTARG; AUTH_FLAG_SET=true ;;
        b ) BASE_IMAGE="$OPTARG" ;;
        e ) OVERLAY=$OPTARG ;;
        o ) # First -o clears previous overlays, then builds fresh list
            if [ "$_OVERLAYS_CLEARED" = false ]; then OVERLAYS=""; _OVERLAYS_CLEARED=true; fi
            OVERLAYS="${OVERLAYS:+$OVERLAYS:}$OPTARG"
            ;;
        \? ) print_help; exit 1 ;;
    esac
done

# If no port specified, pick an available one
if [ -z "$PORT" ]; then
    PORT=$(choose_port) || {
        print_error "Failed to find an available port. Please specify one with -p."
        exit 1
    }
    print_info "Available port :${BLUE}$PORT${NC} auto-selected."
    print_info "Remember to set up port forwarding: ${CYAN}ssh -L $PORT:localhost:$PORT $USER@$HOSTNAME${NC}"
    if ! confirm_default_yes "Proceed with this port?"; then
        echo "Aborted by user."; exit 1
    fi
else
    validate_port "$PORT"
fi

#region Sanity Checks
check_port_available "$PORT"
check_condatainer

check_and_install_overlays xfce4 igv $OVERLAYS

if [ ! -f "$OVERLAY" ]; then
    print_info "Overlay ${BLUE}$OVERLAY${NC} not found. Continuing without it."
    sleep 3
else
    check_overlay_integrity "$OVERLAY"
fi
#endregion

# Construct arguments for CondaTainer exec
[ -n "$BASE_IMAGE" ] && BASE_IMAGE_ARG="-b $BASE_IMAGE"
[ -n "$OVERLAY" ] && [ -f "$OVERLAY" ] && OVERLAY_ARG="-o $OVERLAY"
[ -n "$OVERLAYS" ] && OVERLAYS_ARG=$(build_overlays_arg "$OVERLAYS")

# Generate a random password if not provided by config or -a
if [ "${AUTH_FLAG_SET:-false}" = "false" ] && [ "${AUTH_CONFIG_SET:-false}" = "false" ]; then
    print_info "No VNC password provided. Generating a random one..."
    VNC_PASSWD=$(openssl rand -hex 8 2>/dev/null || tr -dc 'a-zA-Z0-9' </dev/urandom | head -c 16 || echo "$(date +%s)-$RANDOM")
fi

condatainer exec \
    $BASE_IMAGE_ARG \
    -o xfce4 \
    bash -c "echo '$VNC_PASSWD' | vncpasswd -f > $HOME/.vnc/passwd-igv && chmod 600 $HOME/.vnc/passwd-igv"

# Create VNC xstartup script
mkdir -p $HOME/.vnc
cat > "$HOME/.vnc/xstartup" <<'EOF'
#!/bin/sh
unset SESSION_MANAGER
unset DBUS_SESSION_BUS_ADDRESS
exec dbus-launch --exit-with-session startxfce4
EOF
chmod +x $HOME/.vnc/xstartup

# Change XDG_* dirs to point under "$DESKTOP_HOME" (do not modify $HOME itself)
# So it will not mess the $HOME dir up
if [ ! -f "$HOME/.config/user-dirs.dirs" ] || [ ! -d "$DESKTOP_HOME" ]; then
    mkdir -p "$HOME/.config"
    cat > "$HOME/.config/user-dirs.dirs" <<EOT
XDG_DESKTOP_DIR="$DESKTOP_HOME/Desktop"
XDG_DOCUMENTS_DIR="$DESKTOP_HOME/Documents"
XDG_DOWNLOAD_DIR="$DESKTOP_HOME/Downloads"
XDG_MUSIC_DIR="$DESKTOP_HOME/Music"
XDG_PICTURES_DIR="$DESKTOP_HOME/Pictures"
XDG_PUBLICSHARE_DIR="$DESKTOP_HOME/Public"
XDG_TEMPLATES_DIR="$DESKTOP_HOME/Templates"
XDG_VIDEOS_DIR="$DESKTOP_HOME/Videos"
EOT
    mkdir -p "$DESKTOP_HOME"
    mkdir -p "$DESKTOP_HOME"/{Desktop,Documents,Downloads,Music,Pictures,Public,Templates,Videos}
fi

DISPLAY_NUM=""
for i in $(seq 10 99); do
    if [ ! -f /tmp/.X${i}-lock ]; then
        DISPLAY_NUM=$i
        break
    fi
done
if [ -z "$DISPLAY_NUM" ]; then
    print_error "No available display number found for VNC server."
    exit 1
fi
export DISPLAY=:${DISPLAY_NUM}
VNC_PORT=$((5900 + DISPLAY_NUM))

export XDG_RUNTIME_DIR=$SCRATCH/.xdg_runtime
mkdir -p $XDG_RUNTIME_DIR

cleanup() {
    condatainer instance stop xfce4-instance
    rm -f /tmp/.X${DISPLAY_NUM}-lock
    rm -f /tmp/.X11-unix/X${DISPLAY_NUM}
    exit 0
}

trap cleanup SIGINT SIGTERM

condatainer instance start \
    $BASE_IMAGE_ARG \
    --env DISPLAY=$DISPLAY \
    --env XDG_DATA_DIRS="$SCRATCH/.local/share:/usr/local/share:/usr/share" \
    --bind $XDG_RUNTIME_DIR \
    --bind $DESKTOP_HOME \
    -o igv \
    -o xfce4 \
    $OVERLAYS_ARG \
    $OVERLAY_ARG --writable \
    xfce4-instance

# Copy the schemas to a writable location and compile them
condatainer instance exec \
    xfce4-instance \
    bash -c "
        mkdir -p $SCRATCH/.local/share/glib-2.0/schemas
        cp -r /usr/share/glib-2.0/schemas/* $SCRATCH/.local/share/glib-2.0/schemas/ 2>/dev/null
        glib-compile-schemas $SCRATCH/.local/share/glib-2.0/schemas/
    "

print_info "Starting websockify for noVNC on port ${MAGENTA}$PORT${NC}..."
condatainer instance exec \
    xfce4-instance \
    websockify --web /usr/share/novnc localhost:$PORT localhost:$VNC_PORT &

print_info "Starting XFCE desktop environment on display ${MAGENTA}$DISPLAY${NC} (VNC port ${MAGENTA}$VNC_PORT${NC})..."
condatainer instance exec \
    xfce4-instance \
    vncserver $DISPLAY \
        -geometry 1600x900 -depth 24 \
        -rfbport $VNC_PORT \
        -rfbauth $HOME/.vnc/passwd-igv \
        -xstartup $HOME/.vnc/xstartup

print_info "Starting IGV..."
condatainer instance exec \
    xfce4-instance \
    igv &

print_info "noVNC URL: ${BLUE}http://localhost:$PORT/vnc.html?autoconnect=1&resize=remote#password=${VNC_PASSWD}${NC}"
print_info "To stop the desktop, press Ctrl+C in this terminal."

sleep infinity
